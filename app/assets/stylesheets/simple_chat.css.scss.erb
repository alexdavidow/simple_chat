#chat-form {
  position: fixed;
  bottom: 0;
  width: 100%;

  input {
    font-size: 24px;
  }
  #channel {
    position: relative;
    left: 10px;
  }
  #chat_input {
    width: 100%;
  }
  input[type=submit] {
    width: 100%;
  }
}

#chats {
  background-image: url("<%= asset_path 'diagonal_waves.png' %>");
  width: 100%;
  height: 400px;
  overflow: scroll;

}

#user-info {
  position: fixed;
  border: black;
  top: 0;
  right: 0;
  background-color: grey;
  border: 1px solid black;
}

p {
  display: inline-block;
}

li {
  display: inline-block;
  font-style: none;
}

.button {
  width: 120px;
  font-size: 22px;
  text-align: center;
}

ul {
  height: 40px;
  padding-bottom: 0;
}
